{
  "name": "lingui",
  "version": "0.1.0",
  "license": "MIT",
  "description": "Laravel localization on JavaScript.",
  "repository": {
    "type": "git",
    "url": "https://github.com/linguijs/lingui.git"
  },
  "bugs": {
    "url": "https://github.com/linguijs/lingui/issues"
  },
  "files": [
    "dist",
    "types"
  ],
  "type": "module",
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "pnpm clean && ./build.js && tsc",
    "build:with-deps": "./build.js --with-deps",
    "clean": "rm -rf types && rm -rf dist",
    "dev": "./build.js --watch",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "esbuild": "^0.25.9",
    "esbuild-node-externals": "^1.18.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "typescript": "^5.9.2"
  }
}
